<div class="col-xs-12">

<h1 style="color:#cc3333;"> New Blog </h1>
  <div class="well">
  <%= simple_form_for @blog do |f| %>
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :date %>
    <%= f.input :private %>
    <%= f.input :body %>
    <%= f.submit "Save".html_safe, class: 'btn btn-lg btn-danger'%>
<% end %>
</div>

</div>

<div class="well">
    <%= link_to "Add New Blog", new_blog_path, class: 'btn btn-default'%>
</div>
